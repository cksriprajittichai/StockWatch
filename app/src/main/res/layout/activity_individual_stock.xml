<?xml version="1.0" encoding="utf-8"?>

<!--Whole ScrollView is initialized as GONE-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/black">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <ProgressBar
            android:id="@+id/progressBar_individual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="200dp" />

        <TextView
            android:id="@+id/textView_scrubTime_individual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@android:color/white" />

        <!--Init as GONE-->
        <c.chasesriprajittichai.stockwatch.CustomSparkView
            android:id="@+id/sparkView_individual"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:spark_lineColor="@color/colorAccent"
            app:spark_scrubEnabled="true"
            app:spark_scrubLineWidth="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_scrubPrice_individual"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/colorAccentTransparent" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="2">

                <!--Init as GONE-->
                <com.wefika.horizontalpicker.HorizontalPicker xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/horizontalPicker_chartPeriod_individual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:visibility="gone"
                    app:sideItems="2"
                    app:values="@array/chartPeriods" />

                <!--Underline selected chart period of horizontal picker-->
                <!--Init as GONE-->
                <View
                    android:id="@+id/view_chartPeriodPickerUnderline_individual"
                    android:layout_width="16dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@android:color/white"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/horizontalPicker_chartPeriod_individual" />

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/textView_scrubChangePercent_individual"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/colorAccentTransparent" />

        </LinearLayout>

        <!--Init as GONE-->
        <View
            android:id="@+id/divider_sparkViewToStats_individual"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray"
            android:visibility="gone" />

        <!--Init as GONE-->
        <TextView
            android:id="@+id/textView_keyStatisticsHeader_individual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="start"
            android:text="@string/keyStatistics"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView_state_individual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textView_price_individual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textView_changePoint_individual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textView_changePercent_individual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textView_close_price_individual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textView_close_changePoint_individual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textView_close_changePercent_individual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textView_openPrice_individual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="5">

            <!--
            To give two vertical LinearLayouts the same amount of horizontal space (creating two
            columns), set both of their layout widths to 0, and their layout weights to 1
            -->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_marginTop="12dp"
                android:layout_row="0"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0dp"
                    android:includeFontPadding="false"
                    android:text="@string/todaysLow"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@android:color/darker_gray" />


                <TextView
                    android:id="@+id/textView_todaysLow_individual"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:includeFontPadding="false"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_marginTop="12dp"
                android:layout_row="0"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0dp"
                    android:includeFontPadding="false"
                    android:text="@string/todaysHigh"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@android:color/darker_gray" />


                <TextView
                    android:id="@+id/textView_todaysHigh_individual"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:includeFontPadding="false"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_marginTop="12dp"
                android:layout_row="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0dp"
                    android:includeFontPadding="false"
                    android:text="@string/fiftyTwoWeekLow"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@android:color/darker_gray" />


                <TextView
                    android:id="@+id/textView_fiftyTwoWeekLow_individual"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:includeFontPadding="false"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_marginTop="12dp"
                android:layout_row="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0dp"
                    android:includeFontPadding="false"
                    android:text="@string/fiftyTwoWeekHigh"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/textView_fiftyTwoWeekHigh_individual"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:includeFontPadding="false"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_marginTop="12dp"
                android:layout_row="2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0dp"
                    android:includeFontPadding="false"
                    android:text="@string/marketCap"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/textView_marketCap_individual"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:includeFontPadding="false"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_marginTop="12dp"
                android:layout_row="2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0dp"
                    android:includeFontPadding="false"
                    android:text="@string/beta"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/textView_beta_individual"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:includeFontPadding="false"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_marginTop="12dp"
                android:layout_row="3"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0dp"
                    android:includeFontPadding="false"
                    android:text="@string/peRatio"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/textView_peRatio_individual"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:includeFontPadding="false"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_marginTop="12dp"
                android:layout_row="3"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0dp"
                    android:includeFontPadding="false"
                    android:text="@string/eps"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/textView_eps_individual"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:includeFontPadding="false"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_marginTop="12dp"
                android:layout_row="4"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0dp"
                    android:includeFontPadding="false"
                    android:text="@string/yield"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/textView_yield_individual"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:includeFontPadding="false"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_marginTop="12dp"
                android:layout_row="4"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0dp"
                    android:includeFontPadding="false"
                    android:text="@string/avgVolume"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/textView_averageVolume_individual"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:includeFontPadding="false"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </GridLayout>

        <!--Init as GONE-->
        <View
            android:id="@+id/divider_statisticsToDescription_individual"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView_description_individual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white" />

    </LinearLayout>

</ScrollView>